<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <com.bingor.forminputview.FormInputView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:hint="请输入任意文字"
            app:maxLines="3"
            app:title="普通输入框" />

        <com.bingor.forminputview.FormInputView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:borderColor="#66D81B60"
            app:hint="只能输入数字哦"
            app:inputType="number"
            app:leftIcon="@drawable/ic_test"
            app:showLeftIcon="true"
            app:showRightIcon="true"
            app:strokeWidth="2dp"
            app:switchBg="@drawable/selector_psw"
            app:textColorTitle="@color/colorPrimaryDark"
            app:textSize="14sp"
            app:textSizeTitle="12sp"
            app:title="数字输入框"
            app:titleOffset="8dp" />

        <com.bingor.forminputview.FormInputView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:borderColor="#66D81B60"
            app:hint="请输入任意文字"
            app:inputType="number"
            app:showLeftIcon="true"
            app:showRightIcon="true"
            app:strokeWidth="2dp"
            app:switchBg="@drawable/selector_psw"
            app:text="Hello"
            app:textColorTitle="@color/colorPrimaryDark"
            app:textSize="14sp"
            app:textSizeTitle="12sp"
            app:title="单行文字输入框"
            app:titleOffset="8dp" />

    </LinearLayout>

</ScrollView>